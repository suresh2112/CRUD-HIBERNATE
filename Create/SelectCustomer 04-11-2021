package com.jdbc.demo.preparestatement;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

public class SelectCustomer {

	public static void main(String[] args) {

		Connection connection = null;
		PreparedStatement preparedStatement = null;

		try {
			// Step 1 : Register Driver
			Class.forName("com.mysql.cj.jdbc.Driver");
			// Step 2: Create Connection
			connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/jdbcdemo", "root", "root");
			// Step 3: Execute Query
			preparedStatement = connection
					.prepareStatement("SELECT * FROM CUSTOMER WHERE CID = ?");
			preparedStatement.setInt(1, 1010);

			
			ResultSet resultSet = preparedStatement.executeQuery();
			
			if(resultSet.next()) {
				System.out.println("CID : "+resultSet.getInt("CID"));
				System.out.println("CNAME : "+resultSet.getString("CNAME"));
				java.sql.Date sqlDate = resultSet.getDate("DOB");
				Date date = new Date(sqlDate.getTime());
				System.out.println("CDATE : "+date);
				FileOutputStream fin = new FileOutputStream("C:\\Users\\lenovo\\OneDrive\\Pictures\\dhoniFromDB.jpg");
				fin.write(resultSet.getBytes("CIMAGE"));
			}

		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		} catch (SQLException e) {
			e.printStackTrace();
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}  finally {
			try {
				preparedStatement.close();
				connection.close();
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}

		}
	}

}
